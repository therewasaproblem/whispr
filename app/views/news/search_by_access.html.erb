<% if @itemsOrdered.length > 0 %>
    <h1 class="text-white">Notícias recentes mais acessadas <%= @keyword %></h1>
<% else %>
    <h1 class="text-white">Nenhuma notícia encontrada</h1>
<% end %>

<% @itemsOrdered.each do |item| %>
    <%= render partial: "news_card", locals: { item: item } %>
<% end %>
